@using Microsoft.AspNet.Identity
@model IEnumerable<Pack4Travel.Models.equipements>

@{
    ViewBag.Title = "Private";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    @Html.ActionLink("Utwórz nową listę", "Create", null, new { @class = "btn btn-success space" })
</p>
<div class="row">

    @foreach (var item in Model.Where(x => x.Id == User.Identity.GetUserId()))
    {
        <div class="col-md-4">
            <h2 class="btn btn-block btn-primary">@Html.DisplayFor(modelItem => item.equipementName) @Html.DisplayFor(modelItem => item.average)</h2>
            <span class="btn btn-info space">
                @Html.ActionLink("EDYTUJ", "Edit", new { id = item.idEquipement }, new { @class = "font-white" })
            </span>
            <span class="btn btn-info space">

                @Html.ActionLink("SZCZEGÓŁY", "Details", new { id = item.idEquipement }, new { @class = "font-white" })
            </span>
            <span class="btn btn-info space">
                @Html.ActionLink("USUŃ", "Delete", new { id = item.idEquipement }, new { @class = "font-white" })
            </span>
            <span class="btn btn-info space">
                @Html.ActionLink("KOPIUJ", "Fork", new { id = item.idEquipement }, new { @class = "font-white" })
            </span>
        </div>
    }
</div>
